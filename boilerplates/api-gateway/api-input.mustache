{
    "Profile": "{{deploymentProfile}}",
    "Region": "{{deploymentRegion}}",
    "CognitoUserPoolId": "eu-central-1_xxxxxxxxxx",
    "Bucket": {
        "Name": "{{apiNamePosix}}",
        "Key": "cloudformations/stacks"
    },
    "OutputFile": "${PWD}/${DATE_TODAY}/api-meta.json",
    "Deployment": {
        "Name": "{{deploymentName}}",
        "Stacks": {
            "ApiGateway": "api-gateway.yaml",
            "DynamoDB": "dynamodb-template.yaml"
        },
        "Functions": {
            {{#services}}
            "{{serviceName}}": {
                "functionInput": "./{{serviceName}}/function-input.json"
            }{{#hasMore}}, {{/hasMore}}
            {{/services}}
        },
        "SecretManagers": {
            "{{apiName}}Secret": {}
        }
    }
}