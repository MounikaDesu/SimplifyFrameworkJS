#!/bin/bash
# Simplify Automatic Deployment Script
# Project: {{projectNamePosix}}
# Deployment: {{deploymentNamePosix}}
# Region: {{deploymentRegion}}
# Profile: {{deploymentProfile}}
# Version: {{projectVersion}}
INITIAL_DIR=$PWD
{{#services}}
export DEPLOYMENT_STAGE=latest
export OVERRIDEN_PACKAGE_LAYER={{serviceNamePosix}}
cd ${INITIAL_DIR}/{{projectName}}/{{serviceName}} && npm install && npm run build && npm run deploy && cd -
if [ $? -ne 0 ]; then
    echo "Publishing {{serviceName}} has failed!"
    exit(255)
fi
{{/services}}